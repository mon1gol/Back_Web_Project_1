<div class="row" style="margin:10% 5% 25% 5%;">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login" class="active">Войти</a></li>
            <li class="tab col s6"><a href="#register" class="active">Регистрация</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h1 class="center">Вход</h1>
        <div class="container" style="margin-top:5%;margin-bottom:15%;">
            <div class="row">
                <form class="col s12" action="/auth/login" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" name="email" type="email" class="validate">
                            <label for="email">Почта</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" name="password" type="password" class="validate">
                            <label for="password">Пароль</label>
                        </div>
                    </div>

                    <button class="btn btn-primary center pink lighten-3" type="submit">Войти</button>
                </form>
            </div>
        </div>
    </div>
    <div id="register" class="col s6 offset-s3">
        <h1 class="center">Создать аккаунт</h1>
        <div class="container" style="margin-top:5%;margin-bottom:15%;">
            <div class="row">
                <form class="col s12" action="/auth/register" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="remail" name="email" type="email" class="validate">
                            <label for="remail">Почта</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="rname" name="name" type="text" class="validate">
                            <label for="rname">Имя</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="rpassword" name="password" type="password" class="validate">
                            <label for="rpassword">Пароль</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="confirm" name="confirm" type="password" class="validate">
                            <label for="confirm">Повторите пароль</label>
                        </div>
                    </div>
                        
                    <button class="btn btn-primary center pink lighten-3" type="submit">Зарегестрироваться</button>
                </form>
            </div>
        </div>
    </div>
</div>